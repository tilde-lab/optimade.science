{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/*",
    "__sapper__/*",
    "dist/*",
    "src/**/*.spec.ts"
  ],
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "esnext",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "downlevelIteration": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "removeComments": true,
    "declaration": false,
    "diagnostics": false,
    "sourceMap": true,
    "noLib": false,
    "strictNullChecks": true,
    "strict": true,
    "typeRoots": [
      "src/**/*",
      "/.node_modules/@types"
    ],
    "types": [
      "svelte"
    ],
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@": [
        "./src"
      ],
      "@/*": [
        "./src/*"
      ]
    }
  }
}
